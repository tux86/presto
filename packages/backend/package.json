{
  "name": "@presto/backend",
  "version": "1.12.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --env-file ../../.env --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "db:generate": "bun run --env-file ../../.env drizzle-kit generate",
    "db:migrate": "bun run --env-file ../../.env src/db/migrate.ts",
    "db:reset": "bun run --env-file ../../.env src/db/reset.ts",
    "db:seed": "bun run --env-file ../../.env src/db/seed.ts",
    "db:studio": "bun run --env-file ../../.env drizzle-kit studio",
    "test": "bun test --env-file .env.test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@paralleldrive/cuid2": "^2.2.2",
    "@presto/shared": "workspace:*",
    "@react-pdf/renderer": "^4.3.0",
    "drizzle-orm": "^0.44.0",
    "hono": "^4.7.0",
    "hono-rate-limiter": "^0.5.3",
    "mysql2": "^3.14.0",
    "pg": "^8.18.0",
    "react": "^19.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.0.0",
    "drizzle-kit": "^0.31.0",
    "typescript": "^5.7.0"
  }
}
