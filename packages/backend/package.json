{
  "name": "@presto/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "db:migrate": "bunx prisma migrate dev && bunx prisma generate",
    "db:seed": "bunx prisma db seed",
    "db:generate": "bunx prisma generate",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@presto/shared": "workspace:*",
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "@react-pdf/renderer": "^4.3.0",
    "hono": "^4.7.0",
    "pg": "^8.18.0",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.0.0",
    "dotenv": "^17.3.1",
    "prisma": "^7.4.1",
    "typescript": "^5.7.0"
  }
}
